{
	"compilerOptions": {
		"incremental": true,
		"target": "ES2017",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmitOnError": true,
		"module": "commonjs",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"useDefineForClassFields": true,
		"skipLibCheck": true,
		"baseUrl": "."
	},
	"include": ["src/**/*", "__tests__"],
	"exclude": ["dist"]
}
